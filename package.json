{
  "name": "giuem.com",
  "version": "1.0.0",
  "private": true,
  "description": "giuem.com",
  "author": "Giuem",
  "engines": {
    "node": "16.x",
    "pnpm": "^6.27.1"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "bootstrap": "npm i -g pnpm@^6 && pnpm install"
  },
  "devDependencies": {
    "@infra/eslint-config": "workspace:*",
    "eslint": "8.16.0",
    "husky": "8.0.1",
    "lint-staged": "12.4.2",
    "prettier": "2.6.2",
    "turbo": "1.2.14",
    "typescript": "4.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --ignore-unknown --write"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "babel-eslint"
      ],
      "allowedVersions": {
        "react-dom": "18",
        "react": "18"
      }
    }
  }
}
