{
  "name": "giuem.com",
  "version": "1.0.0",
  "private": true,
  "description": "giuem.com",
  "author": "Giuem",
  "engines": {
    "node": "14.x",
    "pnpm": "^6"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "bootstrap": "npm i -g pnpm@^6 && pnpm install"
  },
  "devDependencies": {
    "@infra/eslint-config": "workspace:*",
    "eslint": "8.6.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "turbo": "1.0.24",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --ignore-unknown --write"
    ]
  },
  "turbo": {
    "baseBranch": "origin/main",
    "npmClient": "pnpm",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          "build/**",
          "public/**"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
